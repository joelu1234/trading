<?xml version="1.0"?>
<assembly>
	<!-- id>distribution</id -->
	<formats>
		<format>zip</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<fileSets>
		<fileSet>
			<directory>src/main/resources</directory>
			<outputDirectory></outputDirectory>
			<includes>
				<include>**/*</include>
			</includes>
		</fileSet>
	</fileSets>
	<dependencySets>
		<dependencySet>
			<useProjectArtifact>false</useProjectArtifact>
			<includes>
				<include>javax.mail:mail</include>
				<include>commons-lang:commons-lang:jar</include>
				<include>commons-io:commons-io:jar</include>
				<include>commons-net:commons-net:jar</include>
				<include>org.apache.ibatis:ibatis-sqlmap:jar</include>
				<include>net.sf.opencsv:opencsv:jar</include>
				<include>org.codehaus.jackson:jackson-core-asl:jar</include>
				<include>org.codehaus.jackson:jackson-mapper-asl:jar</include>
				<include>log4j:log4j:jar</include>
				<include>org.quartz-scheduler:quartz:jar</include>
				<include>org.jsoup:jsoup:jar</include>
				<include>org.mortbay.jetty:jetty:jar</include>
				<include>org.mortbay.jetty:jetty-util:jar</include>
				<include>org.slf4j:slf4j-api:jar</include>
				<include>org.slf4j:slf4j-log4j12:jar</include>				
				<include>javax.servlet:javax.servlet-api:jar</include>								
				<include>trading:backend:jar</include>
			</includes>
			<unpack>false</unpack>
			<outputDirectory>lib</outputDirectory>
		</dependencySet>
	</dependencySets>
</assembly>